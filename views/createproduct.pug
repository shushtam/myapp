extends layout

block content
    .container
        .row
            .col-md-2
            .col-md-8
                form(method="post")
                    .form-group
                        label(for='name') Name
                        input.form-control(type='text', name='name')
                    .form-group
                        label(for='user_id') User
                        input.form-control(type='text', name='user_id')
                    .form-group
                        label(for='quality') Quality
                        input.form-control(type='text', name='quality')
                    .form-group
                        label(for='title') Title
                        input.form-control(type='text', name='title')
                    input.btn.btn-success(type='submit', value='create')

